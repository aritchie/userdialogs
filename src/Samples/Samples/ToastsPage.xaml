<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.ToastsPage"
             Title="Toasts">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Success" Command="{Binding Success}" />
            <Button Text="Info" Command="{Binding Info}" />
            <Button Text="Warn" Command="{Binding Warn}" />
            <Button Text="Error" Command="{Binding Error}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>